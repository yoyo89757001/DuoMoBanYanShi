<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:background="@drawable/jianbian2"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:layout_width="160dp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/ruitong_logo"
            android:layout_height="60dp" />

        <LinearLayout
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/white"
                android:textSize="25sp"
                android:id="@+id/xingqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="40dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/taiyang2"
                android:layout_height="40dp" />
            <TextView
                android:layout_marginRight="20dp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/white"
                android:id="@+id/wendu"
                android:text="32°"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </RelativeLayout>

    <Button
        android:layout_width="30dp"
        android:id="@+id/ddd"
        android:background="@color/img_full_opaque"
        android:layout_height="30dp" />



    <LinearLayout
        android:id="@+id/video_root"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_weight="2"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:background="@drawable/blue"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:text="2012年12月22日"
                    android:textColor="@color/white"
                    android:textSize="34sp"
                    android:id="@+id/riqi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="2012年12月22日"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:id="@+id/riqi2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="12:12"
                    android:id="@+id/xiaoshi"
                    android:gravity="center"
                    android:layout_marginTop="18dp"
                    android:textColor="@color/white"
                    android:textSize="56sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



                <TextView
                    android:textSize="36sp"
                    android:textColor="@color/white"
                    android:text="晴"
                    android:layout_marginTop="18dp"
                    android:id="@+id/tianqi0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp" />
            </LinearLayout>
            <View
                android:background="@color/transparent"
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <LinearLayout
                android:layout_weight="1.2"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/zidonghuoqu19"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            <TextView
                android:textColor="@color/white"
                android:textSize="40sp"
                android:text="AQI"
                android:gravity="left"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="left"
                    android:layout_marginLeft="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/white"
                        android:textSize="28sp"
                        android:text="空气质量指数 "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textColor="@color/result_points"
                        android:textSize="32sp"
                        android:text="23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:background="@drawable/aqi"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_height="54dp"/>


            </LinearLayout>

        </LinearLayout>

   <View
       android:layout_width="0dp"
       android:layout_weight="5"
       android:layout_height="match_parent"/>

    </LinearLayout>




            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


                <!--<com.example.xiaojun.duomobanyanshi.media.IjkVideoView-->
