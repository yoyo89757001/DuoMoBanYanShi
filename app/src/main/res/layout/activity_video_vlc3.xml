<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:layout_width="30dp"
        android:id="@+id/ddd"
        android:background="@color/img_full_opaque"
        android:layout_height="30dp" />

    <ImageView
        android:layout_width="160dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/logo44"
        android:layout_height="60dp" />

    <LinearLayout
        android:id="@+id/video_root"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_weight="2"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/blue"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:text="12:12"
                    android:id="@+id/xiaoshi"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="2012年12月22日"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:id="@+id/riqi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="周五"
                    android:id="@+id/xingqi"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <View
                android:background="@color/transparent"
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <RelativeLayout
                android:layout_weight="1.2"
               android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/zidonghuoqu19"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:layout_width="76dp"
                    android:background="@drawable/taiyang2"
                    android:layout_height="76dp"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/imageView2"
                    android:layout_marginEnd="32dp"
                    android:layout_above="@+id/tianqi1"
                    android:layout_toStartOf="@+id/tianqi1" />

                <TextView
                    android:textSize="36sp"
                    android:textColor="@color/white"
                    android:text="晴"
                    android:id="@+id/tianqi0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView2"
                    android:layout_alignStart="@+id/tianqi1"
                    android:layout_marginStart="13dp" />

                <TextView
                    android:textSize="36sp"
                    android:textColor="@color/white"
                    android:text="温度"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tianqi1"
                    android:layout_marginBottom="11dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp" />

            </RelativeLayout>

        </LinearLayout>

   <View
       android:layout_width="0dp"
       android:layout_weight="5"
       android:layout_height="match_parent"/>

    </LinearLayout>




            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


                <!--<com.example.xiaojun.duomobanyanshi.media.IjkVideoView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:padding="1dp"-->
                    <!--android:visibility="gone"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:id="@+id/vitamio" />-->

<RelativeLayout
    android:id="@+id/vipbg_rl"
    android:visibility="gone"
    android:layout_alignParentBottom="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/vipbg"
        android:background="@drawable/tcbg1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <TextView
        android:layout_width="match_parent"
        android:id="@+id/autofitTextView"
        android:gravity="center"
        android:textSize="66sp"
        android:textStyle="bold"
        android:maxLines="3"
        android:layout_marginTop="100dp"
        android:textColor="@color/white"
        android:layout_height="match_parent" />

</RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</RelativeLayout>